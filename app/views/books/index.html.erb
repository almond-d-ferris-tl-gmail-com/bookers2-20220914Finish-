<h1>Book detail</h1>

<% @book.each do |book| %>
<!--@book:インスタンス変数-->
<!--↑のeach文があるから↓のbook.~が使える-->
<!--end文を忘れない-->

<div>
  <!--投稿ユーザー画像-->
  <p><%= image_tag 'no_image.jpg' %>
  <!--Title-->
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>
  <!--Opinion-->
  <%= book.body %></p>
  <!-- <p>ユーザーネーム-->
<p><%= book.user.name %></p>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %>
        <td><%= link_to "Edit", edit_user_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :Title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_field :Opinion %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %><br>
  </div>
<% end %>

