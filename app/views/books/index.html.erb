          <!--Title-->
            <%= link_to book_path(book.id) do %>
            <td><%= book.title %></td>
            <% end %>
          <!--Opinion-->
            <td><%= book.body %>
            <td><%= link_to "Edit", edit_user_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
