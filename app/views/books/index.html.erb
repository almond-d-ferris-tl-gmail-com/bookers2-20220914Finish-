<!--use<!--Books(.com/books)-->
<%= render "/layouts/leftbar" , book:@book %>
  <div class="col-md-8" offset-md-l>  <!--"col-lg-8"→"col-md-8" offset-md-lに変更-->

    <table class="table table-striped">

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <h2>Books</h2>
    <% @books.each do |book| %>
          <tr>
          <!--投稿ユーザー画像-->
            <td><%= image_tag current_user.get_profile_image(100,100) %><br>
          <!--Title-->
            <td><%= link_to book.title , book_path(book.id) %></td>
          <!--Opinion-->
            <td><%= book.body %></td>
            <td></td>
          </tr>
        <% end %>
  </tbody>
</table>
</div>
</div>
</div>
