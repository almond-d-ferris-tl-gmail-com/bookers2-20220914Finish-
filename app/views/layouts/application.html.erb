<!--共通部分-->
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- FontAwesomeの読み込み account→kits→cb~→copy-->
    <script src="https://kit.fontawesome.com/cb9c23a1e6.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %><!--ログイン後-->
            <li class="nav-item"><!--Home-->
              <%= link_to "Home", user_path(current_user.id), class: "nav-link text-light fa-solid fa-house-chimney" %>
            </li>

            <li class="nav-item"><!--Users-->
              <%= link_to "Users", users_path, class: "nav-link text-light fa-solid fa-users" %>
            </li>

            <li class="nav-item"><!--Books-->
              <%= link_to "Books", books_path, class: "nav-link text-light fa-solid fa-book-open" %>
            </li>

             <li class="nav-item"><!--Log out-->
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link text-light fa-solid fa-right-from-bracket" %>
            </li>

            <% else %><!--ログイン前-->

            <li class="nav-item"><!--Home-->
              <%= link_to "Home", root_path, class: "fa-solid fa-house-chimney nav-link text-light" %>
            </li>

            <li class="nav-item"><!--About-->
              <%= link_to "About", about_path, class: "nav-link text-light fa-solid fa-link" %>
            </li>

            <li class="nav-item"><!--Sign up-->
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-light fa-solid fa-user-plus" %>
            </li>

            <li class="nav-item"><!--Log in-->
              <%= link_to "Log in",  new_user_session_path, class: "nav-link text-light fa-solid fa-right-to-bracket" %>
            </li>

            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
    <%= yield %>
    </main>

    <footer align="center"><br>CopyRight Infratop.inc
    </footer>
  </body>
</html>
