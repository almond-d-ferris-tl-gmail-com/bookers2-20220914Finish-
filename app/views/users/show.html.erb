<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>

  <% if @user == user_signed_in? %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @book.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
<!-- 投稿ユーザー画像： -->
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
<!-- ショップ名： -->
  <p><%= book.title %></p>
<!-- 説明： -->
  <p><%= book.body %></p>
<!-- ユーザーネーム： -->
  <p><%= book.user.name %></p>
</div>
<% end %>