<!--ログインしたら表示されるページBooks(.com/users/数字)-->
<%= render "/layouts/leftbar" , book:@book, user:@user %>
<div class="col-md-8 offset-md-1">

  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <h2>Books</h2>
        <% @books.each do |book| %>
          <tr>
          <!--投稿ユーザー画像-->
            <td><%= link_to image_tag(book.user.get_profile_image(100,100), class: "image"), user_path(book.user) %><br>
          <!--Title-->
            <td><%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %></td>
          <!--Opinion-->
            <td><%= book.body %></td>
            <td></td>
          </tr>
        <% end %>
    </tbody>
  </table>
</div>

