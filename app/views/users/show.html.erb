<p id="notice"><%= notice %></p>

  <div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
  <!-- 以下を追加 -->
  <div class="col-lg-4">
      <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %><br>

    <table class="table table-striped">
      <thead>
        <tr>
          <th><pre>name &#009;&#009; <%= current_user.name %></pre></th>
        </tr>
        <tr>
           <!--画像とユーザー名を表示させる-->
          <th>introduction</th>
        </tr>
      </thead>
    </table>

        <div>
          <%= link_to 'マイページ', user_path(current_user.id) %>
        </div><br>

    <h2>New book</h2>
      <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <div class="field">
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :Opinion %><br>
        <%= f.text_field :body %>
      </div><br>
      <div class="btn btn-success text-white">
          <%= link_to "Create Book", users_path %>
          <% end %>

      </div>
  </div>
  <div class="col-lg-8">  <!-- この行を追加 -->

    <table class="table table-striped">
<!--
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
-->
  <tbody>
      <h2>Book detail</h2>
    <% @books.each do |book| %>
          <tr>
          <!--投稿ユーザー画像-->
            <td><%= image_tag 'no_image.jpg' %><br>
          <!-- <p>ユーザーネーム-->
            <%= link_to book.user.name, book_path(book.id) %></td>
          <!--Title-->
            <%= link_to book_path(book.id) do %>
            <td><%= book.title %></td>
            <% end %>
          <!--Opinion-->
            <td><%= book.body %>
            <td><div class="btn btn-success text-white"><%= link_to "Edit", edit_user_path(book.id) %></div></td>
            <td><div class="btn btn-danger text-white"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></div></td>
          </tr>
        <% end %>
  </tbody>
</table>
</div>
</div>
</div>
