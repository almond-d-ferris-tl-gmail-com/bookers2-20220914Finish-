<main>
        <p id="notice"></p>
        <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>User info</h2>

<%= form_with model: @user, url: user_path(@user.id) , method: :patch do |f| %>

  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br><br>

  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br><br>

  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%><br><br>

  <div class="actions">
    <%= f.submit "Update User" , class: "btn btn-secondary"%>
  </div>

<% end %>

    </div>
  </div>
</div>
</main>
